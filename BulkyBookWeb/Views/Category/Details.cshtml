@model Category

<form method="post" asp-action="Delete">
    <input asp-for="Category_Id" hidden></input>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" disabled placeholder="Enter Name">

    </div>
    <div class="form-group">
        <label asp-for="DisplayOrder"></label>
        <input type="text" asp-for="DisplayOrder" class="form-control" disabled placeholder="Enter DisplayOrder">

    </div>
    <br></br>
    <button type="submit" class="btn btn-danger">Delete Category</button>
    <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back To List</a>
</form>

