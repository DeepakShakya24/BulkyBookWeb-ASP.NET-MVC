@model Category

<form method="post" asp-action="EditCategory">
    <input asp-for="Category_Id" hidden></input>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisplayOrder"></label>
        <input type="text" class="form-control" asp-for="DisplayOrder" placeholder="Enter DisplayOrder">
        <span asp-validation-for="DisplayOrder"></span>
    </div>
    <br></br>
    <button type="submit" class="btn btn-primary">Update Category</button>
    <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back To List</a>
</form>

